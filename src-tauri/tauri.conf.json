{
  "productName": "stats-overlay",
  "version": "0.1.0",
  "identifier": "dev.timmo.stats-overlay",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Stats Overlay",
        "url": "/",
        "width": 1920,
        "height": 1080,
        "acceptFirstMouse": false,
        "alwaysOnTop": true,
        "decorations": false,
        "focus": false,
        "fullscreen": false,
        "maximized": true,
        "resizable": false,
        "shadow": false,
        "skipTaskbar": true,
        "transparent": true,
        "visible": false
      },
      {
        "label": "settings",
        "title": "Settings | Stats Overlay",
        "url": "/settings",
        "width": 480,
        "height": 310,
        "center": true,
        "decorations": false,
        "focus": true,
        "shadow": false,
        "transparent": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "id": "main",
      "iconAsTemplate": false,
      "iconPath": "icons/icon.png",
      "menuOnLeftClick": true,
      "title": "Stats Overlay",
      "tooltip": "Stats Overlay"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Utility",
    "license": "Apache-2.0",
    "licenseFile": "../LICENSE",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "$schema": "../node_modules/@tauri-apps/cli/schema.json"
}